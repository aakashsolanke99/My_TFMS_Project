package com.revature.util;

import java.sql.Date;
import java.text.DateFormat;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.TimeZone;

public class UtsToIst {

	public static void main(String[] args) {
		
		  DateFormat sdf = new SimpleDateFormat("dd-MM-yyyy HH:mm:ss");
		    sdf.setTimeZone(TimeZone.getTimeZone("UTC"));
		    String pattern = "dd-MM-yyyy HH:mm:ss";
		    SimpleDateFormat formatter;
		    formatter = new SimpleDateFormat(pattern);

		        int utcDate = 02-11-2022;
				String formattedDate = formatter.format(utcDate);
		        Date ISTDate = null;
				try {
					ISTDate = (Date) sdf.parse(formattedDate);
				} catch (ParseException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
		String ISTDateString = formatter.format(ISTDate);
		            System.out.println(ISTDateString);
	}
}
