package com.revature.model;

import java.util.Scanner;

import com.revature.constant.Constant;

public class Menu {

	public void showMenu(){
		
	Scanner s=new Scanner(System.in);
	Userdetails aakash = new Userdetails();
	Constant constant = new Constant();

   int ch=0;
	do {
		System.out.println(constant.MENU);
		System.out.println("1. Enter Associate Details");
		System.out.println("2. Display Associate Details");
		System.out.println("3. Delete Associate Details");
		System.out.println("4. Update Associate Details");
		System.out.println("5. Exit");
		
		System.out.println(constant.CHOICE);
		ch= s.nextInt();
		
		switch(ch) {
		
		case 1: aakash.addDetails(); break;
		case 2: aakash.listAssociateDetails();break;
		
		case 5:System.out.println("By By Have a nice daym");break; 
		default: System.out.println("Invalid choise please enter correct choise \n");
		
		}
		
		System.out.println("If you want to see menu press (YES)");
		
		char ch1=s.next().charAt(0);
		s.nextLine();
		if(ch1=='N') {
			break;
		}
	}while(ch!=5);

}
}
