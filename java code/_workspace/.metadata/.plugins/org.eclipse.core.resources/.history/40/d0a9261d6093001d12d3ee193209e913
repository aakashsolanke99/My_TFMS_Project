package com.revature.model;

import java.util.Scanner;

public class App {

	public static void main(String[] args) {
		Scanner s=new Scanner(System.in);
		Userdetails aakash=new Userdetails();
			
       int ch;
       int ch1=0;
		do {
			System.out.println("entere choise");
			System.out.println("1. GetAssociateDetails");
			System.out.println("2. Display Details");
			ch= s.nextInt();
			
			switch(ch) {
			
			case 1: aakash.getAssociateDetails(); break;
			case 2:  aakash.display();break;
			
			}
			
			System.out.println("If you want to continue press '1'");
			ch1=s.nextInt();
			s.nextLine();
		}while(ch1==1);

	}

}
